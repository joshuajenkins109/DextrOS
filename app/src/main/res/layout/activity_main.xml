<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dextros.dextros.MainActivity">

    <TextView
        android:id="@+id/greeting"
        android:layout_width="255dp"
        android:layout_height="250dp"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:text="Welcome to DextrOS!\n\nThis demo will take you through the main features of DextrOS, a dexterity assistant for your mobile devices."
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="57dp" />

    <Button
        android:id="@+id/nextpagebutton"
        android:layout_width="314dp"
        android:layout_height="151dp"
        android:textSize="20sp"
        android:text="Begin Tutorial"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="54dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />



</android.support.constraint.ConstraintLayout>
