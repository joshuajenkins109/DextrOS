<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dextros.dextros.tutorial2">

    <Button
        android:id="@+id/button3"
        android:layout_width="190dp"
        android:layout_height="415dp"
        android:text="Button"
        android:layout_marginLeft="-5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintRight_toLeftOf="@+id/button4"
        android:layout_marginRight="0dp"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.939" />

    <Button
        android:id="@+id/button4"
        android:layout_width="190dp"
        android:layout_height="415dp"
        android:text="Button"
        android:layout_marginRight="-5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.9" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DextrOS detects that the weight of each button you swiped across is similar. It then expands the two buttons into two larger, easier to press, butttons."
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="35dp" />
</android.support.constraint.ConstraintLayout>
